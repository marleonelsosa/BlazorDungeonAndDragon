@if (MostrarMensaje)
{
    <div class="modal-backdrop show"></div>

    <div class="modal fade show" id="exampleModal" tabindex="-1"
         role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true" style="display: block;">
        <div class=" modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">@Titulo</h5>
                    <button @onclick="Ocultar" type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    @ChildContent
                </div>
                <div class="modal-footer">
                    <button @onclick="Ocultar" type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private bool MostrarMensaje = false;
    [Parameter] public string Titulo { get; set; } = "Mensaje";
    [Parameter] public RenderFragment ChildContent { get; set; }

    public void Mostrar() => MostrarMensaje = true;
    public void Ocultar() => MostrarMensaje = false;
}