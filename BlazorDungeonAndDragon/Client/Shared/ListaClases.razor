    void EliminarClaseConfirmacion()
    {
        Clases.Remove(claseABorrar);
        confirmacion.Ocultar();
        claseABorrar = null;
    }

    void OnCancelConfirmacion()
    {
        confirmacion.Ocultar();
        claseABorrar = null;
    }
}
