@code {
    [Parameter] public List<Clase> Clases { get; set; }
    bool MostrarBotones = false;
    Confirmacion confirmacion;
    Clase claseABorrar;

    void EliminarClase(Clase clase)
    {
        confirmacion.Mostrar();
        claseABorrar = clase;
    }

